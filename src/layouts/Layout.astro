---
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
    </head>
    <body>
        <main class="container">
            <slot />
        </main>
    </body>
</html>

<style is:global>
    @import "@picocss/pico/css/pico.min.css";
    :root {
        --pico-border-radius: 1.5rem;
    }
</style>
