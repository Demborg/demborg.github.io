---
import Link from "./Link.astro";
import Images from "./Images.astro";
import Video from "./Video.astro";
import IFrame from "./IFrame.astro";
import { type Props as LinkProps } from "./Link.astro";
import { type Props as ImageProps } from "./Images.astro";
import { type Props as VideoProps } from "./Video.astro";
import { type Props as IFrameProps } from "./IFrame.astro";

interface Props {
    title: string;
    intro: string;
    links: LinkProps[];
    content: ImageProps | VideoProps | IFrameProps;
}

const { content, title, intro, links } = Astro.props;
---

<div class="card">
    <div class="content">
        {content.kind === "images" && <Images {...content} />}
        {content.kind === "video" && <Video {...content} />}
        {content.kind === "iframe" && <IFrame {...content} />}
    </div>
    <div class="body">
        <a href={`/projects/${title}`} class="card">
            <h3 class="title">{title}</h3>
        </a>
        <p class="intro">{intro}</p>
        <div class="link-bar">
            {links.map((link) => <Link {...link} />)}
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        background-color: var(--color-bg);
        border-radius: 1rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .content {
        width: 100%;
        aspect-ratio: 1;
        overflow: hidden;
    }
    .body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding-left: 1rem;
        padding-right: 1rem;
        padding-bottom: 1rem;
        flex-grow: 1;
    }
    .link-bar {
        display: flex;
        justify-content: space-between;
    }
</style>
