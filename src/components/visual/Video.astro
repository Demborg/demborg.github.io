---
interface Props {
    src: string;
    poster?: any;
}

const { src, poster } = Astro.props;
const posterSrc = poster?.src || poster;
---

<video src={src} poster={posterSrc} autoplay playsinline loop muted></video>

<style>
    video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
